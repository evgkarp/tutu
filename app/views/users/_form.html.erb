<%= form_with(model: @user, local: true, html: {class: "form-inline"}) do |f| %>
  <%= render 'common/errors', resource: @user %>

  <div class="row">
    <div class="col-md-4">
      <%= f.label :name %>
      <%= f.text_field :name, id: :user_name, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <%= f.submit "#{ @user.new_record? ? 'Создать' : 'Изменить' }", class: "btn" %>
    </div>
  </div>
<% end %>
